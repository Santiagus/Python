{
    "logging": {
        "version": 1,
        "disable_existing_loggers": false,
        "formatters": {
            "verbose": {
                "format": "{levelname:<8} {asctime} [{module:<16}] {message}",
                "style": "{"
            }
        },
        "handlers": {
            "file": {
                "level": "ERROR",
                "class": "logging.FileHandler",
                "filename": "price_service.log",
                "formatter": "verbose"
            },
            "console": {
                "level": "DEBUG",
                "class": "logging.StreamHandler",
                "formatter": "verbose"
            }
        },
        "root": {
            "level": "INFO",
            "handlers": [
                "console"
            ]
        }
    },
    "redis": {
        "host": "localhost",
        "port": 6379,
        "stream": "price",
        "interval": 60
    }
}